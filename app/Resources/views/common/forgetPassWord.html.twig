{% extends 'layout/layout.html.twig' %}
{% block body %}
    <div class="heading-container ">
        <div class="container heading-standar">
            <div class="heading-wrap">
                <div class="page-breadcrumb clearfix">
                    <div class="heading-info pull-left">
                        <em>Call us</em>&nbsp;&nbsp;
                        <i class="fa fa-phone"></i> (21)26804569-26804599&nbsp;
                        <a href="mailto:info@safir.online">
                            <i class="fa fa-envelope-o"></i>
                            <span>info@safir.online</span>
                        </a>
                    </div>
                </div>
                <div class="page-title pull-right">
                    <h1>سفیر آنلاین</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="content-container no-padding">
        <div class="container-full">
            <div class="row">
                <div class="col-md-12 main-wrap">
                    <div class="main-content">
                        <div class="row section-team-member-title">
                            <div class="column col-md-12">
                                <div class="separator separator-align-center separator-width-100">
                                            <span class="separator-left">
                                                <span class="separator-line"></span>
                                            </span>
                                    <h4>فراموشی کلمه عبور</h4>
                                    <span class="separator-right">
                                                <span class="separator-line"></span>
                                            </span>
                                </div>
                            </div>
                        </div>
                        <div class="row row-custom-padding section-contact" style="padding-top: 0px">
                            <div class="column col-md-12">
                                <div class="container">
                                    <div class="row">
                                        {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
                                        {% if success %}
                                            <div class="message-box success" style="text-align: right;direction: rtl">
لطفا ایمیل خود را برای بازیابی کلمه عبور چک کنید
                                            </div>
                                        {% endif %}
                                        {% if userFound !=1 %}
                                            <div class="message-box alert" style="text-align: right;direction: rtl">
                                                کاربری با این ایمیل موجود نیست.
                                            </div>
                                            {% endif %}
                                        {% if formIsNotValid %}
                                            <div class="message-box alert" style="text-align: right;direction: rtl">
                                                {{ form_errors(form.email) }}
                                            </div>
                                        {% endif %}
                                        <div class="row" style="text-align: center;">
                                            <div class="col-md-3" style="display:inline-block;float: none!important;">
                                                <div class="form-control-wrap">
                                                    {{ form_widget(form.email,{'attr':{'class':'form-control text','placeholder':'ایمیل شما(الزامی)','size':"40"}}) }}
                                                </div>
                                            </div>
                                        </div>

                                        <div class="empty-space-30"></div>

                                        <div class="row" style="text-align: center;">
                                            <div class="col-md-3" style="display:inline-block;float: none!important;">
                                                <div class="text-center">
                                                    <input type="submit" value="ارسال" class="form-control submit"/>
                                                </div>
                                            </div>
                                        </div>
                                        {{ form_end(form) }}
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}