{% extends ':layout:loginLayout.html.twig' %}

{% block body %}
    <body class=" login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="index.html">
            <img src="../assets/pages/img/logo-big.png" alt="" /> </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        {{ form_start(loginForm,{'attr': {'novalidate': 'novalidate'}}) }}
        {% if loginFormIsNotValid or result %}
            {% if result %}
                <div class="message-box alert">
                    <div class="message">{{ result }}</div>
                    <i class="icon"></i>
                </div>
            {% endif %}

        {% endif %}
        <h3 class="form-title font-green">ورود</h3>
        <div class="alert alert-danger display-hide">
            <button class="close" data-close="alert"></button>
            <span> Enter any username and password. </span>
        </div>
        <div class="form-group">
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
            <label class="control-label visible-ie8 visible-ie9">نام کاربری</label>
            {{ form_widget(loginForm.username,{'attr':{'class':'form-control form-control-solid placeholder-no-fix','placeholder':'نام کاربری شما','size':"40"}}) }}
        </div>
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">پسورد</label>
            {{ form_widget(loginForm.password,{'attr':{'class':'form-control form-control-solid placeholder-no-fix','placeholder':'پسورد شما','size':"40"}}) }}
        </div>
        <div class="form-actions">
            <button type="submit" class="btn green uppercase">ورود</button>
        </div>

        {{ form_end(loginForm) }}
        <!-- END LOGIN FORM -->

    </div>
    <div class="copyright"> 1396 ©  </div>
    <!--[if lt IE 9]>

    <!-- BEGIN THEME LAYOUT SCRIPTS -->
    <!-- END THEME LAYOUT SCRIPTS -->

    </body>
{% endblock %}